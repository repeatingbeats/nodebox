#!upstart
description "<%= node[:app][:name] %> server"
author      "slloyd"

start on (local-filesystems and net-device-up IFACE=eth0) or (runlevel [2345])
stop on shutdown

script
  exec sudo -u <%= node[:node_user] %> <%= node[:nodejs][:dir] %>/bin/node <%= node[:app][:path] %>/app.js >> /var/log/<%= node[:app][:name] %>.log 2>&1
end script
