#!upstart
description "<%= node[:app][:name] %> server"
author      "slloyd"

start on (local-filesystems and net-device-up IFACE=eth0) or (runlevel [2345])
stop on shutdown

script
  exec sudo -u <%= node[:node_user] %> sh -c "<%= node[:nodejs][:dir] %>/bin/supervisor <%= node[:app][:path] %>/app.js"
end script
